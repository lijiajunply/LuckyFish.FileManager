<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LuckyFish.FileManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LuckyFish.FileManager.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LuckyFish.FileManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LuckyFish.FileManager">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Items="{Binding FileRoot}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                   <Grid Tapped="RootItemTapped" ColumnDefinitions="Auto,Auto">
                       <Image Height="15" Width="15" Grid.Column="0" Source="../Assets/drive.png"></Image>
                       <TextBlock Grid.Column="1" Text="{Binding Key}"></TextBlock>
                   </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <views:Manager DataContext="{Binding Model}" Grid.Column="1"></views:Manager>
    </Grid>
</Window>
